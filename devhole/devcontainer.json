{
  "name": "Arch Linux Kubernetes Devcontainer",
  "build": {
    "dockerfile": "Containerfile"
  },
  "runArgs": [
    "--privileged"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/tsathoggualware/workspace,type=bind,consistency=cached",
    "source=/run/podman/podman.sock,target=/run/podman/podman.sock,type=bind",
    "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "remoteUser": "tsathoggualware",
  "workspaceFolder": "/home/tsathoggualware/workspace",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "sudo pacman -Syu --noconfirm && paru -S --noconfirm"
}
